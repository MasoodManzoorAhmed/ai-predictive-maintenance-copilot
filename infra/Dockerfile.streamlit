# infra/Dockerfile.streamlit
FROM python:3.10-slim

WORKDIR /app

# Light system deps
RUN apt-get update && apt-get install -y --no-install-recommends \
    build-essential \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements from project root (because compose uses context: ..)
COPY requirements.txt /app/requirements.txt

# Install deps
RUN pip install --no-cache-dir --upgrade pip setuptools wheel \
    && pip install --no-cache-dir -r /app/requirements.txt

# Copy streamlit app folder
COPY streamlit_app/ /app/streamlit_app/

EXPOSE 8501

# âœ… Robust: run Streamlit via python -m
CMD ["python", "-m", "streamlit", "run", "streamlit_app/app.py", "--server.port=8501", "--server.address=0.0.0.0"]
