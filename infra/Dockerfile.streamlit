# infra/Dockerfile.streamlit
FROM python:3.10-slim

ENV PYTHONDONTWRITEBYTECODE=1
ENV PYTHONUNBUFFERED=1

WORKDIR /app

RUN apt-get update && apt-get install -y --no-install-recommends \
    curl \
  && rm -rf /var/lib/apt/lists/*

# Install ONLY UI requirements (avoid TensorFlow/Torch in UI image)
COPY requirements-ui.txt /app/requirements-ui.txt

RUN pip install --no-cache-dir --upgrade pip setuptools wheel \
  && pip install --no-cache-dir -r /app/requirements-ui.txt

COPY streamlit_app/ /app/streamlit_app/
COPY .streamlit/ /app/.streamlit/

EXPOSE 8080

CMD ["sh", "-lc", "streamlit run streamlit_app/app.py --server.address=0.0.0.0 --server.port=${PORT} --server.headless=true --browser.gatherUsageStats=false --server.enableCORS=false --server.enableXsrfProtection=false"]
